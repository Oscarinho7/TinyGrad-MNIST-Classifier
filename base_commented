<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Digit Classifier</title>
    
    <!-- Tailwind CSS pour le styling rapide via CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <style>
        /* ===== STYLES GLOBAUX ===== */
        body {
            background-color: #111827; /* Fond gris foncé */
            color: white;              /* Texte blanc */
        }

        /* ===== STYLES DU CANVAS DE DESSIN ===== */
        canvas {
            background: black;           /* Fond noir pour dessiner en blanc */
            touch-action: none;          /* Désactive le scroll mobile pour permettre le dessin */
            border-radius: 0.5rem;       /* Coins arrondis */
            cursor: crosshair;           /* Curseur en croix pour indiquer le mode dessin */
            /* Accélération hardware pour de meilleures performances */
            -webkit-transform: translate3d(0, 0, 0);
            transform: translate3d(0, 0, 0);
        }

        /* ===== CONTENEUR DES BARRES DE PROBABILITÉ ===== */
        .bar-container {
            position: relative;          /* Permet le positionnement absolu de la barre bleue à l'intérieur */
            width: 1.5rem;              /* Largeur fixe de la barre */
            height: 5rem;               /* Hauteur maximale de la barre */
            background-color: #374151;  /* Fond gris (barre vide) */
            border-radius: 0.25rem;     /* Coins arrondis */
        }

        /* ===== BARRE DE PROBABILITÉ ANIMÉE ===== */
        .prob-bar {
            background-color: #3b82f6; /* Couleur bleue pour la probabilité */
            position: absolute;         /* Positionnement absolu pour partir du bas */
            bottom: 0;                  /* Aligne au bas du conteneur */
            left: 0;
            width: 100%;
            transition: height 0.2s ease; /* Animation fluide lors du changement de hauteur */
            border-radius: 0.25rem;
        }

        /* ===== EFFET VISUEL POUR BOUTON ACTIF ===== */
        .btn-active {
            box-shadow: 0 0 0 3px rgba(59,130,246,0.15); /* Halo bleu autour du bouton actif */
        }

        /* ===== STYLE DU PREVIEW 28x28 ===== */
        .preview {
            image-rendering: pixelated; /* Rendu pixelisé pour voir clairement les pixels */
            width: 112px;               /* 4x la taille réelle (28x4 = 112) */
            height: 112px;
            border-radius: 0.5rem;
            border: 1px solid rgba(255,255,255,0.06); /* Bordure subtile */
        }
    </style>
</head>
<body class="flex flex-col items-center justify-center min-h-screen p-4">
    <!-- ===== CONTENEUR PRINCIPAL ===== -->
    <div class="w-full max-w-md bg-[#111827] rounded-lg shadow-lg p-6">
        
        <!-- ===== EN-TÊTE ===== -->
        <h1 class="text-2xl font-bold mb-4 text-center">MNIST Digit Classifier</h1>
        <p class="text-center mb-4">Select a model, draw a digit, and see the prediction!</p>

        <!-- ===== SÉLECTION DU MODÈLE ===== -->
        <!-- L'utilisateur peut choisir entre MLP (réseau dense) et CNN (réseau convolutif) -->
        <div class="mb-4">
            <label for="model-select" class="block text-sm font-medium mb-2">Model Selection</label>
            <select id="model-select" class="w-full bg-gray-700 text-white p-2 rounded">
                <option value="mlp">MLP</option> <!-- Multi-Layer Perceptron -->
                <option value="cnn">CNN</option> <!-- Convolutional Neural Network -->
            </select>
        </div>

        <!-- ===== OUTILS DE DESSIN ===== -->
        <div class="flex items-center gap-3 mb-4">
            <!-- Bouton Stylo : dessine en blanc -->
            <button id="pen-btn" class="px-4 py-2 rounded bg-blue-600 text-white btn-active">Pen</button>
            
            <!-- Bouton Gomme : dessine en noir (efface) -->
            <button id="eraser-btn" class="px-4 py-2 rounded bg-red-600 text-white">Eraser</button>
            
            <!-- Bouton Clear : efface tout le canvas -->
            <button id="clear-btn" class="px-4 py-2 rounded bg-gray-600 text-white">Clear</button>
            
            <!-- Slider pour ajuster la taille du pinceau (4-48 pixels) -->
            <label class="ml-2 text-sm">Brush size
                <input id="brush-size" type="range" min="4" max="48" value="20" class="ml-2">
            </label>
        </div>

        <!-- ===== CANVAS DE DESSIN ===== -->
        <!-- Canvas de 280x280 pixels pour dessiner le chiffre -->
        <div class="flex justify-center mb-4">
            <canvas id="drawing-canvas" width="280" height="280" style="width:280px;height:280px;"></canvas>
        </div>

        <!-- ===== CONTRÔLES D'INFÉRENCE ET PREVIEW ===== -->
        <div class="flex justify-center gap-3 mb-4">
            <!-- Bouton pour lancer manuellement la prédiction -->
            <button id="run-model" class="bg-green-500 text-white px-4 py-2 rounded">Run Model</button>
            
            <!-- Toggle pour activer/désactiver la prédiction automatique -->
            <button id="auto-run" class="bg-yellow-500 text-black px-4 py-2 rounded">Toggle Auto-run</button>
            
            <!-- Preview miniature 28x28 (taille réelle utilisée par le modèle) -->
            <div class="flex flex-col items-center">
                <span class="text-xs mb-1">Preview 28×28</span>
                <canvas id="preview28" width="28" height="28" class="preview"></canvas>
            </div>
        </div>

        <!-- ===== RÉSULTATS DE PRÉDICTION ===== -->
        <div id="prediction" class="text-center mb-4">
            <!-- Affiche le chiffre prédit avec la plus haute probabilité -->
            <p id="best-guess" class="text-lg font-bold">Best Guess: -</p>
            <!-- Affiche le temps d'inférence en millisecondes -->
            <p id="inference-time" class="text-sm">Inference Time: - ms</p>
        </div>

        <!-- ===== BARRES DE PROBABILITÉ (0-9) ===== -->
        <!-- Container qui sera rempli dynamiquement par JavaScript -->
        <div id="probability-bars" class="flex justify-around w-full mt-4">
        </div>
    </div>

    <!-- ===== SCRIPT JAVASCRIPT (MODULE ES6) ===== -->
    <script type="module">
        /* ===============================================
           SECTION 1 : IMPORTS ET INITIALISATION
           =============================================== */
        
        // Import des deux modèles pré-entraînés (MLP et CNN)
        import mnist_mlp from './mnist_mlp/mnist_mlp.js';
        import mnist_convnet from './mnist_convnet/mnist_convnet.js';

        // Récupération des éléments DOM du canvas principal et du preview
        const canvas = document.getElementById('drawing-canvas');
        const ctx = canvas.getContext('2d', { willReadFrequently: true }); // Context 2D avec optimisation de lecture
        const preview = document.getElementById('preview28');
        const pctx = preview.getContext('2d');

        /* ===============================================
           SECTION 2 : CONFIGURATION HiDPI (RETINA)
           =============================================== */
        
        /**
         * Configure le canvas pour les écrans haute résolution (Retina, 4K, etc.)
         * Sans cette fonction, le dessin serait flou sur les écrans HiDPI
         */
        function setupHiDPI() {
            // Récupère le ratio de pixels de l'écran (1 pour standard, 2+ pour Retina)
            const ratio = Math.max(window.devicePixelRatio || 1, 1);
            
            // Récupère les dimensions CSS du canvas
            const cssW = parseInt(canvas.style.width) || canvas.width;
            const cssH = parseInt(canvas.style.height) || canvas.height;
            
            // Ajuste la résolution interne du canvas selon le ratio
            canvas.width = Math.round(cssW * ratio);
            canvas.height = Math.round(cssH * ratio);
            
            // Maintient la taille CSS (visuelle)
            canvas.style.width = cssW + 'px';
            canvas.style.height = cssH + 'px';
            
            // Scale le contexte pour que les coordonnées de dessin correspondent au CSS
            ctx.setTransform(ratio, 0, 0, ratio, 0, 0);
            
            // Initialise le fond en noir
            ctx.fillStyle = 'black';
            ctx.fillRect(0, 0, cssW, cssH);
        }
        
        setupHiDPI(); // Appel initial
        window.addEventListener('resize', setupHiDPI); // Réajuste si la fenêtre change de taille

        // Configuration du style de dessin (lignes arrondies et lisses)
        ctx.lineCap = 'round';   // Extrémités des lignes arrondies
        ctx.lineJoin = 'round';  // Jonctions des lignes arrondies

        /* ===============================================
           SECTION 3 : VARIABLES D'ÉTAT
           =============================================== */
        
        let drawing = false;      // Indique si l'utilisateur est en train de dessiner
        let eraser = false;       // Mode gomme (true) ou stylo (false)
        let lastX = 0, lastY = 0; // Position précédente du curseur (pour tracer des lignes)
        let brushSize = 20;       // Taille du pinceau en pixels
        let autoRun = false;      // Mode auto-run activé/désactivé
        let currentModel = 'mlp'; // Modèle actuellement sélectionné ('mlp' ou 'cnn')
        let modelRunner = null;   // Fonction d'inférence du modèle chargé
        let device = null;        // Device WebGPU pour l'accélération GPU

        /* ===============================================
           SECTION 4 : INITIALISATION WebGPU
           =============================================== */
        
        /**
         * Initialise WebGPU pour l'accélération matérielle
         * WebGPU permet d'exécuter les calculs du réseau de neurones sur le GPU
         */
        async function initWebGPU() {
            // Vérifie si WebGPU est disponible dans le navigateur
            if (!navigator.gpu) {
                alert('WebGPU not supported.');
                return;
            }
            
            // Demande un adaptateur GPU
            const adapter = await navigator.gpu.requestAdapter();
            // Crée un device logique pour interagir avec le GPU
            device = await adapter.requestDevice();
        }

        /* ===============================================
           SECTION 5 : CHARGEMENT DES MODÈLES
           =============================================== */
        
        /**
         * Charge le modèle sélectionné (MLP ou CNN)
         * @param {string} modelType - 'mlp' ou 'cnn'
         */
        async function loadModel(modelType) {
            let modelModule, safetensorsUrl;
            
            // Sélectionne le module et le fichier de poids selon le type
            if (modelType === 'mlp') {
                modelModule = mnist_mlp;
                safetensorsUrl = './mnist_mlp/mnist_mlp.webgpu.safetensors';
            } else {
                modelModule = mnist_convnet;
                safetensorsUrl = './mnist_convnet/mnist_convnet.webgpu.safetensors';
            }

            // Télécharge les poids du modèle (format safetensors)
            const safetensors = await fetch(safetensorsUrl)
                .then(res => res.arrayBuffer())
                .then(buf => new Uint8Array(buf));
            
            // Configure le réseau avec le device GPU et les poids
            modelRunner = await modelModule.setupNet(device, safetensors);
        }

        /* ===============================================
           SECTION 6 : TRAITEMENT D'IMAGE
           =============================================== */
        
        /**
         * Convertit le dessin du canvas en données 28x28 normalisées pour le modèle
         * @returns {Float32Array} Tableau de 784 valeurs (28x28) entre -1 et 1
         */
        function getImageData28() {
            // Crée un canvas temporaire de 28x28 pixels
            const tmp = document.createElement('canvas');
            tmp.width = 28;
            tmp.height = 28;
            const tctx = tmp.getContext('2d');
            
            // Désactive le lissage pour un redimensionnement net
            tctx.imageSmoothingEnabled = false;
            
            // Redimensionne le dessin de 280x280 à 28x28
            tctx.drawImage(canvas, 0, 0, tmp.width, tmp.height);

            // Récupère les données pixels (RGBA)
            const img = tctx.getImageData(0, 0, tmp.width, tmp.height);
            const data = new Float32Array(28 * 28);
            
            // Convertit chaque pixel en niveau de gris normalisé [-1, 1]
            for (let i = 0; i < 28 * 28; i++) {
                const idx = i * 4; // Chaque pixel = 4 valeurs (R, G, B, A)
                const r = img.data[idx];
                const g = img.data[idx + 1];
                const b = img.data[idx + 2];
                
                // Formule de luminance standard (pondération des canaux RGB)
                const lum = (0.299 * r + 0.587 * g + 0.114 * b) / 255; // Normalise [0, 1]
                
                // Normalise dans [-1, 1] (format attendu par le modèle)
                data[i] = lum * 2 - 1;
            }
            
            // Met à jour le canvas preview
            pctx.imageSmoothingEnabled = false;
            pctx.clearRect(0, 0, 28, 28);
            pctx.drawImage(tmp, 0, 0, 28, 28);
            
            return data;
        }

        /**
         * Met à jour uniquement le preview 28x28 (sans calcul de normalisation)
         */
        function updatePreview() {
            const tmp = document.createElement('canvas');
            tmp.width = 28;
            tmp.height = 28;
            const tctx = tmp.getContext('2d');
            tctx.imageSmoothingEnabled = false;
            tctx.drawImage(canvas, 0, 0, 28, 28);
            pctx.imageSmoothingEnabled = false;
            pctx.clearRect(0, 0, 28, 28);
            pctx.drawImage(tmp, 0, 0, 28, 28);
        }

        /* ===============================================
           SECTION 7 : CALCULS DE PROBABILITÉ
           =============================================== */
        
        /**
         * Fonction softmax : convertit les logits en probabilités [0, 1] qui somment à 1
         * @param {Array<number>} arr - Logits bruts du modèle
         * @returns {Array<number>} Probabilités normalisées
         */
        function softmax(arr) {
            // Filtre les valeurs NaN (au cas où)
            const validArr = arr.filter(v => !isNaN(v));
            if (validArr.length === 0) {
                return new Array(10).fill(0.1); // Distribution uniforme si tout est NaN
            }
            
            // Trouve le maximum pour la stabilité numérique (évite l'overflow de exp)
            const max = Math.max(...validArr);
            
            // Calcule exp(x - max) pour chaque élément
            const exps = arr.map(v => isNaN(v) ? 0 : Math.exp(v - max));
            
            // Somme des exponentielles
            const s = exps.reduce((a, b) => a + b, 0);
            if (s === 0) {
                return new Array(10).fill(0.1); // Fallback si somme nulle
            }
            
            // Normalise pour obtenir des probabilités qui somment à 1
            return exps.map(v => v / s);
        }

        /* ===============================================
           SECTION 8 : MISE À JOUR DE L'INTERFACE
           =============================================== */
        
        /**
         * Met à jour les barres de probabilité et affiche la meilleure prédiction
         * @param {Array<number>} probs - Tableau de 10 probabilités (une par chiffre 0-9)
         */
        function setBars(probs) {
            let maxProb = -1, best = -1;
            
            // Parcourt les 10 chiffres
            for (let i = 0; i < 10; i++) {
                // Trouve le chiffre avec la plus haute probabilité
                if (probs[i] > maxProb) { 
                    maxProb = probs[i]; 
                    best = i; 
                }
                
                // Convertit la probabilité en pourcentage
                const pct = Math.round(probs[i] * 100);
                
                // Met à jour la hauteur de la barre et le texte
                const barEl = document.getElementById(`bar-${i}`);
                const probEl = document.getElementById(`prob-${i}`);
                if (barEl) barEl.style.height = `${pct}%`;
                if (probEl) probEl.textContent = `${pct}%`;
            }
            
            // Affiche le meilleur chiffre prédit
            document.getElementById('best-guess').textContent = `Best Guess: ${best}`;
        }

        /* ===============================================
           SECTION 9 : INFÉRENCE DU MODÈLE
           =============================================== */
        
        /**
         * Exécute le modèle sur le dessin actuel et affiche les résultats
         */
        async function runInference() {
            if (!modelRunner) return; // Vérifie qu'un modèle est chargé

            const t0 = performance.now(); // Début du chronomètre
            
            // 1. Convertit le dessin en données 28x28 normalisées
            const input = getImageData28();
            
            // 2. Exécute l'inférence sur le GPU
            const result = await modelRunner(input);
            
            // 3. Extrait les logits (le modèle retourne un tableau avec un élément)
            const logits = result[0];
            console.log('Logits:', logits); // Pour debug
            
            // 4. Convertit les logits en probabilités avec softmax
            const probs = softmax(Array.from(logits));
            console.log('Probabilities:', probs); // Pour debug
            
            // 5. Met à jour l'interface avec les résultats
            setBars(probs);
            
            const t1 = performance.now(); // Fin du chronomètre
            
            // 6. Affiche le temps d'inférence
            document.getElementById('inference-time').textContent = 
                `Inference Time: ${(t1 - t0).toFixed(2)} ms`;
            
            // 7. Met à jour le preview
            updatePreview();
        }

        /**
         * Réinitialise l'affichage des prédictions
         */
        function resetPrediction() {
            for (let i = 0; i < 10; i++) {
                const barEl = document.getElementById(`bar-${i}`);
                const probEl = document.getElementById(`prob-${i}`);
                if (barEl) barEl.style.height = `0%`;
                if (probEl) probEl.textContent = `0%`;
            }
            document.getElementById('best-guess').textContent = `Best Guess: -`;
            document.getElementById('inference-time').textContent = `Inference Time: - ms`;
        }

        /* ===============================================
           SECTION 10 : GESTION DU DESSIN
           =============================================== */
        
        /**
         * Récupère la position du pointeur (souris ou tactile) relative au canvas
         * @param {PointerEvent} e - Événement du pointeur
         * @returns {{x: number, y: number}} Position relative au canvas
         */
        function getPointerPos(e) {
            const rect = canvas.getBoundingClientRect(); // Position du canvas dans la page
            
            // Supporte souris et tactile
            const clientX = e.clientX !== undefined ? e.clientX : 
                           (e.touches ? e.touches[0].clientX : 0);
            const clientY = e.clientY !== undefined ? e.clientY : 
                           (e.touches ? e.touches[0].clientY : 0);
            
            // Convertit en coordonnées relatives au canvas
            return { x: clientX - rect.left, y: clientY - rect.top };
        }

        /**
         * Démarre le dessin (clic souris ou touch)
         */
        function startDrawing(e) {
            e.preventDefault(); // Empêche le comportement par défaut (scroll, sélection)
            canvas.setPointerCapture(e.pointerId); // Capture le pointeur
            drawing = true;
            
            const pos = getPointerPos(e);
            lastX = pos.x;
            lastY = pos.y;
            
            // Commence un nouveau chemin
            ctx.beginPath();
            ctx.moveTo(lastX, lastY);
            ctx.lineWidth = brushSize;
            ctx.strokeStyle = eraser ? 'black' : 'white'; // Noir pour gomme, blanc pour stylo
            ctx.lineTo(lastX, lastY); // Dessine un point initial
            ctx.stroke();
        }

        /**
         * Arrête le dessin (relâchement souris ou touch)
         */
        function stopDrawing(e) {
            if (drawing && e && e.pointerId !== undefined) {
                try { 
                    canvas.releasePointerCapture(e.pointerId); // Libère la capture
                } catch(_) {}
            }
            drawing = false;
            
            // Si auto-run est activé, lance automatiquement l'inférence
            if (autoRun) runInference();
        }

        /**
         * Dessine pendant le mouvement (drag)
         */
        function draw(e) {
            if (!drawing) return; // Ne dessine que si le bouton est enfoncé
            
            const pos = getPointerPos(e);
            ctx.strokeStyle = eraser ? 'black' : 'white';
            ctx.lineWidth = brushSize;
            
            // Trace une ligne de l'ancienne position à la nouvelle
            ctx.beginPath();
            ctx.moveTo(lastX, lastY);
            ctx.lineTo(pos.x, pos.y);
            ctx.stroke();
            
            // Met à jour la position précédente
            lastX = pos.x;
            lastY = pos.y;
        }

        /* ===============================================
           SECTION 11 : EVENT LISTENERS - DESSIN
           =============================================== */
        
        // Utilise les événements pointer pour supporter souris ET tactile
        canvas.addEventListener('pointerdown', startDrawing);
        canvas.addEventListener('pointermove', draw);
        canvas.addEventListener('pointerup', stopDrawing);
        canvas.addEventListener('pointercancel', stopDrawing); // Si le pointeur est annulé
        canvas.addEventListener('pointerleave', stopDrawing);  // Si le pointeur sort du canvas

        /* ===============================================
           SECTION 12 : EVENT LISTENERS - BOUTONS
           =============================================== */
        
        // Bouton Stylo
        document.getElementById('pen-btn').addEventListener('click', () => {
            eraser = false;
            document.getElementById('pen-btn').classList.add('btn-active');
            document.getElementById('eraser-btn').classList.remove('btn-active');
        });

        // Bouton Gomme
        document.getElementById('eraser-btn').addEventListener('click', () => {
            eraser = true;
            document.getElementById('eraser-btn').classList.add('btn-active');
            document.getElementById('pen-btn').classList.remove('btn-active');
        });

        // Bouton Clear (effacer tout)
        document.getElementById('clear-btn').addEventListener('click', () => {
            const cssW = parseInt(canvas.style.width) || canvas.width;
            const cssH = parseInt(canvas.style.height) || canvas.height;
            ctx.fillStyle = 'black';
            ctx.fillRect(0, 0, cssW, cssH); // Remplit en noir
            resetPrediction();  // Réinitialise les prédictions
            updatePreview();    // Met à jour le preview
        });

        // Slider de taille de pinceau
        document.getElementById('brush-size').addEventListener('input', (e) => {
            brushSize = Number(e.target.value);
        });

        // Bouton Toggle Auto-run
        document.getElementById('auto-run').addEventListener('click', () => {
            autoRun = !autoRun; // Inverse l'état
            document.getElementById('auto-run').classList.toggle('btn-active', autoRun);
        });

        /* ===============================================
           SECTION 13 : GÉNÉRATION DES BARRES DE PROBABILITÉ
           =============================================== */
        
        // Crée dynamiquement les 10 barres de probabilité (une par chiffre 0-9)
        const barContainer = document.getElementById('probability-bars');
        for (let i = 0; i < 10; i++) {
            const barDiv = document.createElement('div');
            barDiv.className = 'flex flex-col items-center';
            barDiv.innerHTML = `
                <span id="prob-${i}" class="text-xs mb-1">0%</span>
                <div class="bar-container">
                    <div id="bar-${i}" class="prob-bar" style="height: 0%;"></div>
                </div>
                <span class="text-sm mt-1">${i}</span>
            `;
            barContainer.appendChild(barDiv);
        }

        /* ===============================================
           SECTION 14 : EVENT LISTENERS - SÉLECTION MODÈLE
           =============================================== */
        
        // Quand l'utilisateur change de modèle dans le dropdown
        document.getElementById('model-select').addEventListener('change', (e) => {
            currentModel = e.target.value;
            loadModel(currentModel); // Charge le nouveau modèle
        });

        // Bouton Run Model (inférence manuelle)
        document.getElementById('run-model').addEventListener('click', runInference);

        /* ===============================================
           SECTION 15 : INITIALISATION AU CHARGEMENT
           =============================================== */
        
        // Fonction d'initialisation asynchrone (IIFE - Immediately Invoked Function Expression)
        (async () => {
            // 1. Initialise WebGPU
            await initWebGPU();
            
            // 2. Charge le modèle par défaut (MLP)
            await loadModel(currentModel);
            
            // 3. Met à jour le preview initial
            updatePreview();
            
            // 4. Lance une boucle pour l'auto-run (toutes les 600ms)
            setInterval(() => {
                // N'exécute que si auto-run est activé ET qu'on ne dessine pas
                if (autoRun && !drawing) {
                    runInference();
                }
            }, 600);
        })();
    </script>
</body>
</html>